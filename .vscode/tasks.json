{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cds-deploy-bookshop-my.db",
      "type": "shell",
      "command": "cds",
      "args": [
        "deploy",
        "--to",
        "sqlite:my.db",
        "--no-save"
      ],
      "options": {
        "cwd": "${workspaceFolder}/bookshop"
      },
      "isBackground": true,
      "problemMatcher": [
        "$cap-sqlite-bind-handler"
      ]
    }
  ]
}